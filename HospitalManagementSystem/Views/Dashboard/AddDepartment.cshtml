
@{
    ViewBag.Title = "AddDepartment";
    Layout = "~/Views/myLayout.cshtml";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <div class="content-wrapper" style="min-height: 1070px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">

            <div class="p-l-30 p-r-30">
                <div class="header-icon"><i class="pe-7s-world"></i></div>
                <div class="header-title">
                    <h1>Department</h1>
                    <small>Add Department</small>
                </div>
            </div>
        </section>
        <!-- Main content -->
        <div class="content">
            <div id="demoModeEnable"></div>
            <input type="hidden" name="CSRF_TOKEN" id="CSRF_TOKEN" value="ea7cebbec127cc3a451be4b90dfc1e18">
            <!-- alert message -->
            <!-- content -->
            <div class="row">
                <!--  form area -->
                <div class="col-sm-12">
                    <div class="panel panel-default thumbnail">

                        <div class="panel-heading no-print">
                            <div class="btn-group">
                                <a class="btn btn-primary" href=""> <i class="fa fa-list"></i>  Department List </a>
                            </div>
                        </div>

                        <div class="panel-body panel-form">
                            <div class="row">
                                <div class="col-md-9 col-sm-12">

                                    <form action="https://hospitalnew.bdtask.com/demo7/department/create" class="form-inner" method="post" accept-charset="utf-8">
                                        <input type="hidden" name="csrf_stream_token" value="ea7cebbec127cc3a451be4b90dfc1e18">


                                        <input type="hidden" name="dprt_id" value="">

                                        <div class="form-group row">
                                            <label for="name" class="col-xs-3 col-form-label">Department Name <i class="text-danger">*</i></label>
                                            <div class="col-xs-9">
                                                <input name="name" type="text" class="form-control" id="name" placeholder="Department Name" value="">
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="description" class="col-xs-3 col-form-label">Description</label>
                                            <div class="col-xs-9">
                                                <textarea name="description" class="form-control" placeholder="Description" rows="7"></textarea>
                                            </div>
                                        </div>

                                        <!--Radio-->
                                        <div class="form-group row">
                                            <label class="col-xs-3 col-form-label">Status</label>
                                            <div class="col-xs-9">
                                                <div class="form-check">
                                                    <label class="radio-inline"><input type="radio" name="status" value="1" checked="">Active</label>
                                                    <label class="radio-inline"><input type="radio" name="status" value="0">Inactive</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-sm-offset-3 col-sm-6">
                                                <div class="ui buttons">
                                                    
                                                    <button class="ui positive button btn btn-success">Save</button>
                                                </div>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div> <!-- /.content -->
    </div>
</body>
</html>

